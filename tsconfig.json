{
  "compilerOptions": {
    "target": "ESNext",                                
    "module": "CommonJS",                               
    "moduleResolution": "node10",                                                 
    "resolveJsonModule": true,                      
    "declaration": true,                               
    "outDir": "./dist",                                
    "declarationDir": "./dist/types",                   
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,         
    "strict": true,                                     
    "skipLibCheck": true,                     
  },
  "include": ["src/**/*.ts", "test/**/*.ts"], 
  "exclude": ["node_modules", "dist"]
}
